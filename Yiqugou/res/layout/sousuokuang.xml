<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF5000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_shao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/fanhuitubiao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/shouye_imageview001"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shousuokuang" />

            <EditText
                android:id="@+id/shouye_Editext"
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/zdy_editext"
                android:hint="寻找宝贝、店铺"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/shouye_imageview002_xiaoxi"
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/xiaoxitubiao" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>