<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragmentlift001" >

    <LinearLayout
        android:id="@+id/linearid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
	<Button 
	    android:id="@+id/fragment_life001"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="启动对话框风格的Activity"
	    />
	<Button 
	    android:id="@+id/fragment_life002"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="加载目标Fragment"
	    />
	<Button 
	    android:id="@+id/fragment_life003"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="替换目标Fragment、并加入Back栈"
	    />
	<Button 
	    android:id="@+id/fragment_life004"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="替换目标Fragment"
	    />
	<Button 
	    android:id="@+id/fragment_life005"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="退出"
	    />
</LinearLayout>