<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<EditText 
	    android:id="@+id/configurationet001"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:editable="false"
	    android:hint="显示屏幕方向"
	    />
	<EditText 
	    android:id="@+id/configurationet002"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:editable="false"
	    android:hint="显示手机方向控制设备"
	    />
	<EditText 
	    android:id="@+id/configurationet003"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:editable="false"
	    android:hint="显示触摸屏状态"
	    />
	<EditText 
	    android:id="@+id/configurationet004"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:editable="false"
	    android:hint="显示移动网络代号"
	    />
	<Button 
	    android:id="@+id/configurationbtn005"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="获取手机信息"
	    />

</LinearLayout>
