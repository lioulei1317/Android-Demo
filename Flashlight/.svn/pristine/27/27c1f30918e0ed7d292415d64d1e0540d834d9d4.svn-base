<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="@drawable/bg_8"
    android:id="@+id/main_bg"
    >
    
    <SurfaceView android:id="@+id/surface_view"
         android:layout_width="1.0dip"
          android:layout_height="1.0dip"
           android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
	
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/flashlightplus"
        android:layout_marginTop="20dip"
        android:id="@+id/hint"
        />
    <Button 
        android:id="@+id/electric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint"
        android:background="@drawable/battery1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:textColor="@android:color/white"
        />
    <ImageButton 
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/poweroff"
        android:layout_centerInParent="true"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bann_tttt"
        />
    <Gallery 
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/banner_bottom"
        android:spacing="10dip"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bann_tttt"
        android:layout_above="@id/gallery"
        />
</RelativeLayout>
